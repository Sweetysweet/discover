.grid

    h2.title 
        text-align center
        text-transform uppercase
        color $lime
        font-size 2.8rem
        margin-top 10rem
        font-family 'Modak', cursive
        
        &:after 
          border none
          display flex
          border-bottom 2px solid #c2c2c2
          content ' '
          width 22rem
          margin-left 55rem
          margin-top 1.6rem
          @media $tablet
            margin-left 54rem  
        @media $mobile 
          font-size 2.8rem
          text-indent 61rem
        @media $tablet 
          font-size 3rem
          text-indent 54rem     
       
      .line
        border none 
        display flex  
        border-bottom 4px solid $lime
        content ' '
        width 7rem
        margin -0.3rem 0rem 0rem 62.6rem
        position absolute
        @media $mobile-tablet
          margin-left 60.5rem
         @media $tablet
          margin-left 61.5rem  
    .grid__wrapper
      margin-top 5rem
      margin-left 6rem 
      [class*='row_grid']
        display flex
        padding 1rem 2rem
        @media $desktop
          margin-left -1rem
        @media $mobile-tablet
          margin-left 4rem
        @media $mobile
          margin-left 10rem    
        img 
          padding-right 1.8rem

    button
        text-align center
        text-transform uppercase
        color $white
        font-size 2.6rem  
        background-color $lime
        border-radius 1rem
        width 22rem
        height 7rem
        margin 5rem 54rem
        line-height: 4rem
        font-style: normal
        &:hover
          box-shadow 0 0 10px rgba(4,4,3,0.9) 
          transition all .25s ease-in-out


    

       
