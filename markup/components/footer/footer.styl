mixinfooter()
$grey = #959595
footer.footer
  .footer__container
    background-color #efeeee
    @media $mobile
      width 121rem
      height 75rem
    @media $tablet
      width 133rem  
           
        
    h2.tittle
      color $grey
      text-align center
      text-transform uppercase
      font-size 2.8rem
      padding-top 10.4rem
      font-family 'Modak', cursive
       
    .logo__left_side
      margin 6rem 0 0 6rem
      border 1px solid $grey
      width 65rem
      height 48.6rem
      @media $mobile
        width 59.2rem
      .text__left_side
        margin-top 3rem
      p.logo
        color $lime
        text-transform uppercase
        margin 3.4rem 0 0 3rem
        font-size 2.7rem
        padding 1.1rem
        border 2px solid #b7b7b7
        border-radius 1rem
        width 17.8rem
        text-align center
        position relative
      span.logo_travel 
        color $lime
        text-align center
        margin -1.7rem 0 0 8.3rem
        font-size 18px
        text-transform uppercase
        position absolute
        background-color #efeeee
        @media $mobile
          font-size 1.6rem
        
      span.description_text
        color $grey
        width 36rem
        [class$='_line']
          margin-left 3rem
          text-align justify
          font-size 1.4rem
        .first_line
          word-spacing 0.5rem
        .second_line
          word-spacing 0.2rem
        .third_line
          word-spacing 0.1rem 
      .contact__address
        margin 3.1rem 0 0 6.5rem
        color #9b9b9b
        .img_icon 
            object-fit cover
            width 5%
            height 100%
            display flex 
            flex-direction column
            margin 0 0 -13rem -3rem
            :nth-child(odd)
              margin-top 1.5rem
            :nth-child(even)  
              margin-top 0.5rem 
        .social__icons
          object-fit cover
          width 6%
          height 7%
          margin 0 0 -13rem -8rem 
          position relative 
          top 3.5rem
          left 6rem
          display flex
          .social
            background-color #c9c9c9
            margin-right 1rem 
            border-radius .5rem
               
    .contact__rightSide
      border 1px solid $grey
      width 60rem
      height 48.6rem
      margin -48.6rem 0 0 71rem
      border-left none
      @media $mobile
        width 55rem
        margin-left 65rem
      
       
      .form-group
        position relative
        margin 0 0 3rem 3rem
        .form__label
          position absolute
          top 0
          z-index 1
          color $grey
          transition 0.3s
          left 0rem
        .form__input
          width 50rem
          padding-bottom 1rem
          border none 
          border-bottom 1px solid $grey
          background-color transparent 
          outline none
          transition 0.3s
          padding-top 4.3rem
          &:focus
            border-bottom 1px solid $lime
          &:focus ~ .form__label,
          &:not(:placeholder-shown) ~ .form__label 
            top -0.5rem
            font-size 1.2rem
            color $grey
           
       button
        text-align center
        text-transform uppercase
        display flex
        color $white
        font-size 2.6rem  
        background-color $lime
        border-radius 1rem
        text-indent 4rem
        width 22rem
        height 7rem
        margin 5rem 
        margin-left 17.5rem
        line-height: 4rem
        font-style: normal
        position absolute
        &:hover
          box-shadow 0 0 10px rgba(4,4,3,0.9) 
          transition all .25s ease-in-out
          cursor pointer
        img
          object-fit cover
          width 25%
          height 50%
          margin 0 0 -13rem -3rem 
          position relative 
          top 0rem
          left 6rem   
  
    .isSubmited
        padding-top 0
       .popup-wrap
         width 100%
         height 100%
         position fixed
         top 0
         left 0
         right 0
         bottom 0
         z-index 1000
         display none
         .mask-call
          width 100%
          height 100%
          position absolute
          top 0
          left 0
          right 0
          bottom 0
          background-color rgba(0, 0, 0, 0.5)
          z-index 10000000000000000
        .form-call
          background-color #fff
          position absolute
          top 50%
          left 50%
          transform translate(-50%, -50%)
          padding 50px 100px
          z-index 1000000000000 
          .form-call_thanks 
            padding 20px 20px
           &__title 
              font-weight bold
              font-size 50px
              text-align center 
            .form-call__title_thanks
              position relative
              padding-bottom 20px
              margin-bottom 20px
              &:after 
                position absolute
                content ''
                width 80%
                height 1px
                background #6db1f1
                left 50%
                bottom 0
                transform translateX(-50%)   
            .form-call__text 
              color #ccc
              font-size 16px
              margin-bottom 30px
              text-align center 
              .form-call__text_thanks 
                margin 0 !important                   
